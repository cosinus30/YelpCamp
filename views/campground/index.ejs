<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to the YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world!</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add new campground!</a>
            </p>
        </div>
    </header>
    <!-- COOOOOOOOOk ONEMLI -->
    <div class="row" style="display: flex; flex-wrap: wrap; text-align: center;">
        <div class="card-columns">
            <% campgrounds.forEach((campground) => {%>

            <div class="card">
                <img class="card-img-top" src="<%=campground.image%>" alt="" />
                <div class="card-body">
                    <h4 class="card-title"><%=campground.name%></h4>

                    <p class="card-text">
                        <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>

            <%})%>
        </div>

    </div>
</div>
<%- include("../partials/footer") %>